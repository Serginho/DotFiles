#Functions 
jdk() {
        version=$1
        export JAVA_HOME=$(/usr/libexec/java_home -v "$version");
        java -version
 }

# Image optimization
function convertpng() {
	if [ -z "$1" ]; then
		echo "Usage: $0 [filename]";
	else 
		imagemin --plugin.pngquant.quality={0.1,0.2} "$1.png"  > "$1-op.png";
		mv "$1-op.png" "$1.png";
		echo "Converted $1.png";
	fi
}

function webp() {
	npx @squoosh/cli --webp auto $1
}

function compress(){
	directory=$1
	tar c $directory | pv | pixz -p 12 -0 > $directory.tar.xz 
}